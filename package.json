{
    "name": "ai-context",
    "version": "0.1.0",
    "description": "Easily generate comprehensive AI prompt context from your codebase. Define sources, get a Markdown file.",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "ai-context": "./dist/cli.js"
    },
    "scripts": {
        "dev": "bun src/cli.ts",
        "build": "bun build ./src/cli.ts --outdir ./dist --target bun",
        "prepublishOnly": "bun run build"
    },
    "keywords": [
        "ai",
        "context",
        "prompt",
        "cli",
        "developer-tools",
        "llm"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dawichi/ai-context.git"
    },
    "bugs": {
        "url": "https://github.com/dawichi/ai-context/issues"
    },
    "homepage": "https://github.com/dawichi/ai-context#readme",
    "author": "@dawichi",
    "license": "GPL-3.0-or-later",
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "dependencies": {
        "commander": "^14.0.0"
    }
}
